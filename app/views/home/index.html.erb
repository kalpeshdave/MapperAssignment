<div class="page-header">
  <h1><%= t '.title' %></h1>
</div>

<%= form_tag home_index_path, class: "form-horizontal", method: :post, multipart: true do %>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <div class="field">
       <%= file_field_tag :file, class: "form-control", accept: ".csv", required: true %>
     </div>
     <div class="actions form-group py-2">
      <%= submit_tag 'Upload', :class => 'btn btn-primary' %>
     </div>
    </div>
  </div>

<% end %>